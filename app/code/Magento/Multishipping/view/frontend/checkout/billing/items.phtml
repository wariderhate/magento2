            <thead>
                <tr>
                    <th class="col item"><?php echo __('Product Name') ?></th>
                    <th class="col qty"><?php echo __('Qty') ?></th>
                </tr>
            </thead>
            <tbody>
            <?php foreach ($this->getVirtualQuoteItems() as $_item): ?>
